<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="20dp"
    android:background="@color/transparecywhite"
    android:layout_marginBottom="15dp"
    android:paddingBottom="12dp"
    >
    
    <ImageView
        android:id="@+id/avatar"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginTop="12dp"
        android:layout_marginLeft="12dp"/>

    <TextView
        android:id="@+id/name"
        android:layout_toRightOf="@id/avatar"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="16dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/segmonoboot"/>

    <TextView
        android:id="@+id/nameInsta"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/name"
        android:layout_toRightOf="@+id/avatar"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="12dp"
        android:textSize="12sp"
        android:fontFamily="@font/segmonoboot"/>

    <TextView
        android:id="@+id/Categorias"
        android:text="@string/categoria"
        android:layout_below="@id/avatar"
        android:fontFamily="@font/segmonoboot"
        android:layout_marginTop="12dp"
        android:layout_marginLeft="12dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:layout_toRightOf="@id/Categorias"
        android:id="@+id/categoriasList"
        android:layout_below="@id/avatar"
        android:fontFamily="@font/segoeslboot"
        android:layout_marginTop="12dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/lugalabel"
        android:text="Local"
        android:layout_marginLeft="12dp"
        android:layout_below="@id/Categorias"
        android:layout_marginTop="12dp"
        android:fontFamily="@font/segmonoboot"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/lugar"
        android:layout_toRightOf="@id/Categorias"
        android:layout_marginLeft="2dp"
        android:layout_below="@id/categoriasList"
        android:fontFamily="@font/segoenslboot"
        android:layout_marginTop="12dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:layout_alignParentRight="true"
        android:id="@+id/distancia"
        android:layout_marginRight="12dp"
        android:layout_marginLeft="2dp"
        android:fontFamily="@font/segmonoboot"
        android:layout_below="@id/categoriasList"
        android:layout_marginTop="12dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>




</RelativeLayout>